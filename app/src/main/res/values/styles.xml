<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/brandBlue</item>
        <item name="colorPrimaryDark">@color/brandOrange</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="AppTheme2" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/brandBlue</item>
        <item name="colorPrimaryDark">@color/grayPrimaryLight</item>
        <item name="colorAccent">@color/brandBlue</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/background</item>
        <item name="android:windowBackground">@drawable/ic_splash</item>
        <!-- add color black to status bar -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

</resources>